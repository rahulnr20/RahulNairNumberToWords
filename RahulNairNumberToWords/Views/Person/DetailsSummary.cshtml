@model RahulNairNumberToWords.Models.Person

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        .container {
            margin-top: 200px;
            width: 80%;
        }
    </style>
    <title>Information</title>
</head>
<body>
    <div class="container">
        <div align="center">
            <h3 class="form-signin-heading">Details</h3>
        </div>

        <div class="form-group row">
            <label for="lblName" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" id="txtName" class="form-control" readonly="readonly" value="@Model.name">
            </div>
        </div>
        <div class="form-group row">
            <label for="lblnumber" class="col-sm-2 col-form-label">Number</label>
            <div class="col-sm-10">
                <input type="text" id="txtNumber" class="form-control" readonly="readonly" value="@Model.number">
            </div>
        </div>
        <div class="form-group row">
            <label for="lblnumberInWords" class="col-sm-2 col-form-label">Number in words</label>
            <div class="col-sm-10">
                <input type="text" id="txtNumberInWords" class="form-control" readonly="readonly" value="@Model.numberInWords">
            </div>
        </div>
        <div align="center">
            <a href="/Person/Index" class="btn btn-lg btn-primary">Go Back</a>
        </div>

    </div>


    }
</body>
</html>
